---
interface Props {
    title: string;
    content: string | string[];
}
const { title, content } = Astro.props;
---

<div class="flex flex-col shadow-md rounded-lg p-6">
    <h2 class="text-4xl font-semibold">{title}</h2>
    <slot />
    <div class="mt-2">
        {
            Array.isArray(content) ? (
                <ul class="list-disc list-inside">
                    {content.map((item) => (
                        <p>{item}</p>
                    ))}
                </ul>
            ) : (
                <p>{content}</p>
            )
        }
    </div>
</div>
